#!/bin/bash
# ğŸ—ƒï¸ CoffeeShelf - Terminal Shelf Dashboard for Coffee Shell

# Plugin metadata
SHELF_DIR="$HOME/.caffeine/plugins/coffeeshelf"
CONFIG_FILE="$SHELF_DIR/config.conf"
MODULES_DIR="$SHELF_DIR/modules"

# Create a config if it doesn't exist
if [[ ! -f "$CONFIG_FILE" ]]; then
    touch "$CONFIG_FILE"
fi

# Load config
source "$CONFIG_FILE"

# Load modules
load_modules() {
  for module in "${MODULES[@]}"; do
    MODULE_PATH="$MODULES_DIR/$module.sh"
    if [[ -f "$MODULE_PATH" ]]; then
      source "$MODULE_PATH"
    else
      echo "âš ï¸ Module $module not found."
    fi
  done
}

# Display Shelf with TUI
show_shelf() {
  while true; do
    local output=""

    for widget in "${WIDGETS[@]}"; do
      if declare -f "$widget" > /dev/null; then
        output+="$($widget)\n\n"
      else
        output+="âš ï¸  Widget function '$widget' not found.\n\n"
      fi
    done

    whiptail --title "ğŸ—ƒï¸ CoffeeShelf" \
             --yesno "$output\nğŸ” Refresh the shelf?\nâŒ Cancel to quit." 30 50

    if [[ $? -ne 0 ]]; then
      break
    fi
  done
}


# Main entry point
main() {
  mkdir -p "$SHELF_DIR/logs"
  load_modules
  show_shelf
}

main
