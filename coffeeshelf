#!/bin/bash
# 🗃️ CoffeeShelf - Terminal Shelf Dashboard for Coffee Shell

# Plugin metadata
SHELF_DIR="$HOME/.caffeine/plugins/coffeeshelf"
CONFIG_FILE="$SHELF_DIR/config.conf"
MODULES_DIR="$SHELF_DIR/modules"

# Default modules
DEFAULT_MODULES=("sysinfo" "shortcuts" "motd")

# Load modules
load_modules() {
  for module in "${DEFAULT_MODULES[@]}"; do
    MODULE_PATH="$MODULES_DIR/$module.sh"
    if [[ -f "$MODULE_PATH" ]]; then
      source "$MODULE_PATH"
    else
      echo "⚠️ Module $module not found."
    fi
  done
}

# TUI Display
show_shelf() {
  clear
  echo -e "\e[1;32m🗃️ CoffeeShelf - Your Coffee Dashboard\e[0m"
  echo "--------------------------------------"
  echo
  sysinfo_panel
  echo
  shortcuts_panel
  echo
  motd_panel
  echo
  echo "--------------------------------------"
  echo -e "\e[1mRecent Commands:\e[0m"
  tail -n 10 "$SHELF_DIR/logs/console.log" 2>/dev/null || echo "(No command history yet)"
  echo
  echo -e "\e[1mType a command below:\e[0m"
  read -e -p ">> " user_cmd
  if [[ -n "$user_cmd" ]]; then
    echo "$user_cmd" >> "$SHELF_DIR/logs/console.log"
    eval "$user_cmd"
    echo -e "\n(Press Enter to return to shelf...)"
    read
  fi
}

# Run the shelf
main() {
  mkdir -p "$SHELF_DIR/logs"
  load_modules
  while true; do
    show_shelf
  done
}

main
